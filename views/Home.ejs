<%- include('partials/Header') %>

<!-- Hero Banner -->
<div class="hero-banner text-center text-white d-flex align-items-center justify-content-center" style="background:url('/img/home-banner.jpg') center/cover no-repeat; height:100vh;">
  <div class="overlay p-4">
    <h1 class="display-4" style="font-weight: bold; font-size: 150px; color: #000000c7; background-color: #ffb0051e; background-position: 100%;" >Welcome to Brend&House</h1>
    <p class="lead">Discover premium footwear & bags with exclusive White Friday offers!</p>
    <a href="#products" class="btn btn-danger btn-lg mt-3">Shop Now</a>
  </div>
</div>

<!-- Campaign Section -->
<div class="container mt-5">
  <h2 class="text-center">White Friday Sale 2025</h2>
  <h4 class="text-center text-danger"><b>30% to 70% OFF + Extra 15% off</b></h4>
  <p class="text-center">
    ğŸ”¥ Limited Time Offer! Enjoy massive savings on Adidas, Nike, Gucci and more. 
    Refresh your wardrobe, start a new fitness routine or pick up early gifts ğŸ. 
    Shop the best deals while they last ğŸ›’.
  </p>
</div>

<!-- Product Grid -->
<div class="container mt-4" id="products">
  <h2 class="mb-4">Featured Products</h2>
  <div class="row">
    <% if (products.length === 0) { %>
      <div class="col-12"><p>No products found.</p></div>
    <% } %>
    <% products.forEach(function(item){ %>
      <div class="col-md-3 col-sm-6 mb-4">
        <div class="card h-100 shadow-sm">
          <img src="/img/<%= item.IMG %>" class="card-img-top" alt="<%= item.ProductName %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= item.ProductName %></h5>
            <p class="card-text small"><%= item.Description %></p>
            <div class="mt-auto">
              <% if (item.Apply == 1) { %>
                <p class="mb-1"><span class="text-muted text-decoration-line-through"><%= item.ProductPrice %></span></p>
                <p class="mb-0"><strong class="text-danger">Sale: <%= item.EndirimQiymeti %></strong></p>
              <% } else { %>
                <p class="mb-0"><strong>Price: <%= item.ProductPrice %></strong></p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

