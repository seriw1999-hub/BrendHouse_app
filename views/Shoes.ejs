<%- include('partials/Header') %>
<div class="container mt-4">
  <h2>Shoes</h2>
  <div class="row">
    <% if (products.length === 0) { %>
      <div class="col-12"><p>Məhsul tapılmadı.</p></div>
    <% } %>
    <% products.forEach(function(item){ %>
      <div class="col-md-3 col-sm-6 mb-4">
        <div class="card h-100">
          <img src="/img/<%= item.IMG %>" class="card-img-top" alt="<%= item.ProductName %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= item.ProductName %></h5>
            <p class="card-text small"><%= item.Description %></p>
            <div class="mt-auto">
              <% if (item.Apply == 1) { %>
                <p class="mb-1"><span class="text-muted text-decoration-line-through"><%= item.ProductPrice %></span></p>
                <p class="mb-0"><strong class="text-danger">Endirim: <%= item.EndirimQiymeti %></strong></p>
              <% } else { %>
                <p class="mb-0"><strong>Qiymət: <%= item.ProductPrice %></strong></p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<%- include('partials/Footer') %>